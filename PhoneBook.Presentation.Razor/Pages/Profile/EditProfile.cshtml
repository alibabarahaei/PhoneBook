@page
@using PhoneBook.Application.Utilities
@model PhoneBook.Presentation.Razor.Pages.Profile.EditProfileModel
@{
}


<div class="card">
    <div class="card-header">
        <div class="card-title-wrap bar ">
            <h4 class="card-title" id="basic-layout-colored-form-control">تغییر اطلاعات پروفایل</h4>
        </div>
    </div>
    <div class="card-body">
        <div class="">

            <form class="form" method="Post" enctype="multipart/form-data">
                <div class="form-body ">
                    <h4 class="form-section ">
                        <i class="icon-direction"></i> اطلاعات پروفایل
                    </h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="userinput1">نام</label>
                                <input type="text" id="userinput1" class="form-control border-primary" asp-for="editProfileViewModel.FirstName">
                                <span asp-validation-for="editProfileViewModel.FirstName" class="text-danger" style="font-size: 13px"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="userinput2">نام خانوادگی</label>
                                <input type="text" id="userinput2" class="form-control border-primary" asp-for="editProfileViewModel.LastName">
                                <span asp-validation-for="editProfileViewModel.LastName" class="text-danger" style="font-size: 13px"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="userinput3">موبایل</label>
                                <input type="text" id="userinput3" class="form-control border-primary" asp-for="editProfileViewModel.PhoneNumber">
                                <span asp-validation-for="editProfileViewModel.PhoneNumber" class="text-danger" style="font-size: 13px"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="userinput4" asp-for="editProfileViewModel.Gender">جنسیت</label>
                                <select id="userinput4" class="form-control  border-primary" asp-for="editProfileViewModel.Gender">
                                    
                                    <option Selected="@(Model.editProfileViewModel.Gender == 'U')"></option>
                                    <option Selected="@(Model.editProfileViewModel.Gender == 'M')" value='M'>آقا</option>
                                    <option Selected="@(Model.editProfileViewModel.Gender == 'W')" value='W'>خانم</option>

                                </select>
                                <span asp-validation-for="editProfileViewModel.Gender" class="text-danger" style="font-size: 13px"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row my-3">
                        <div class="col ">
                            @if (@Model.editProfileViewModel.PathProfileImageBefore != null)
                            {
                                <img src="@(SD.UserProfileThumb+@Model.editProfileViewModel.PathProfileImageBefore)" class="rounded-circle width-50  mx-auto d-block" alt="user image">
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <label>بارگزاری تصویر پروفایل</label>
                            <label for="images" class="drop-container" id="dropcontainer">
                                <span class="drop-title">تصویر را رها کنید</span>
                                یا
                                <input type="file" id="images" accept="image/*" asp-for="editProfileViewModel.ProfileImage">

                            </label>
                            <span asp-validation-for="editProfileViewModel.ProfileImage" class="text-danger" style="font-size: 13px"></span>
                        </div>

                    </div>



                </div>

                <div class="form-actions left mt-5">
                    <a asp-page="../ListContacts" class="btn btn-danger mr-1">
                        <i class="bi bi-trash me-1"></i> لغو
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save-fill me-1"></i> ذخیره
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>